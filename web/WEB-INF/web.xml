<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Initialize servlet -->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>servlets.Index</servlet-class>
        <init-param>
            <param-name>init</param-name>
            <param-value>initialization</param-value>
        </init-param>
        <init-param>
            <param-name>first</param-name>
            <param-value>first</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/initServlet</url-pattern>
    </servlet-mapping>

    <!-- JSP INIT -->
    <servlet>
        <servlet-name>jspInit</servlet-name>
        <jsp-file>/jsp/Index.jsp</jsp-file>
        <init-param>
            <param-name>jspOne</param-name>
            <param-value>first init jsp param</param-value>
        </init-param>
        <init-param>
            <param-name>jspTwo</param-name>
            <param-value>second init jsp param</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>jspInit</servlet-name>
        <url-pattern>/jspInit</url-pattern>
    </servlet-mapping>

    <!-- FirstServlet -->
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>servlets.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- Global init param -->
    <context-param>
        <param-name>email</param-name>
        <param-value>y.dubovitsky@gmai.com</param-value>
    </context-param>

    <!-- LiveCycle Servlet -->
    <servlet>
        <servlet-name>LiveCycle</servlet-name>
        <servlet-class>servlets.ServletLiveCycle</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>LiveCycle</servlet-name>
    <url-pattern>/cycle</url-pattern>
    </servlet-mapping>
    
    <!-- SessionServlet -->
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>servlets.SessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>

    <!-- Starting files -->
    <welcome-file-list>
        <welcome-file>/html/start.html</welcome-file>
    </welcome-file-list>
    
    <!-- Error page -->
    <error-page>
        <exception-type>javax.servlet.ServletException</exception-type>
        <location>/jsp/ErrorPage.jsp</location>
    </error-page>
    
    <!-- JSP Config -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>/jsp/page/Page.jsp</url-pattern>
            <include-prelude>/jsp/page/Header.jsp</include-prelude>
            <include-coda>/jsp/page/Footer.jsp</include-coda>
        </jsp-property-group>
    </jsp-config>

    <!-- Secure settings -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secureAuthJsp</web-resource-name>
            <url-pattern>/jsp/auth/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>murder</role-name>
        </auth-constraint>
        <!-- use https
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
        -->
    </security-constraint>
    <security-role>
        <role-name>murder</role-name>
    </security-role>

    <!-- auth config without form

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>This is real name</realm-name>
    </login-config>

    -->

    <!-- AUTH with form -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/jsp/auth/LoginForm.jsp</form-login-page>
            <form-error-page>/jsp/ErrorPage.jsp</form-error-page>
        </form-login-config>
    </login-config>
    
    <!-- Role Servlet -->
    <servlet>
        <servlet-name>Role</servlet-name>
        <servlet-class>servlets.RoleServlet</servlet-class>
        <security-role-ref>
            <role-name>Great Murder</role-name>
            <role-link>murder</role-link>
        </security-role-ref>
    </servlet>
    <servlet-mapping>
        <servlet-name>Role</servlet-name>
        <url-pattern>/role</url-pattern>
    </servlet-mapping>

    <!-- Filter
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>servlets.Filter</filter-class>
        <init-param>
            <param-name>namespace</param-name>
            <param-value>servlets.mvc.beans.Person</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/filtered</url-pattern>
        <url-pattern>/param</url-pattern>
        <servlet-name>FirstServlet</servlet-name>
    </filter-mapping>
    -->

    <!-- Listeners -->
    <listener>
        <listener-class>listener.ContextListener</listener-class>
    </listener>
</web-app>